{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@xplat/*": [
        "libs/*"
      ],
      "@xplat/nativescript": [
        "xplat/nativescript/index.ts"
      ],
      "@xplat/nativescript/*": [
        "xplat/nativescript/*"
      ],
      "@xplat/web": [
        "xplat/web/index.ts"
      ],
      "@xplat/web/*": [
        "xplat/web/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}